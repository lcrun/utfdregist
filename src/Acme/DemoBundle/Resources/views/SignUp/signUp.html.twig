{% extends "AcmeUserBundle::layout.html.twig" %}

{% set target = 'signUp' %}

{% block title %}报名{% endblock %}

{% block stylesheets_child %}
    
{% endblock %}

{% block content %}
  <div class="admin_right">
     <div class="content">
    <h2>会议报名</h2>
    <table>
        <tr>
            <td>序号</td>
            <td>会议名称</td>
            <td>报名状态</td>
            <td>报名截止时间</td>
            <td>操作</td>
        </tr>
    {%set i=0%}
    {%for conf in conferences%}
        <tr>
            <td>{{i + 1}}</td>
            <td>{{conf.conferenceName}}</td>
            <td>{{status[i]}}</td>
            <td>{{conf.getDueDate|date('Y-m-d H:i')}}</td>
            <td>{%if status[i]=='正常'%}<a href="/utfdregist/signup/{{conf.getId}}" class="signup_link" >报名</a>{%else%} -- {%endif%}</td>
        {%set i=i+1%}
        </tr>
    {%endfor%}
    </table>
    
    
{%if msg%}{%for m in msg%}<p style="color: red;">{{m}}</p>{%endfor%}{%endif%}


    <h2>已经报名</h2>
    <table>
    {%for sign in signUps%}
        <tr>
            <td>{{sign.getId}}</td>
            <td>{{sign.conference.conferenceName}}</td>  
            <td>{{sign.getConference.getDueDate|date('Y-m-d H:i')}}</td>
            <td><a href="/utfdregist/dissign/{{sign.getId}}" class='dissign_link'>取消报名</a></td>
    {%endfor%}
    </table>
    </div>
 </div>
{% endblock %}